extends layout

block body
  div(ng-controller='AppCtrl')
    h2 GemStore
    ul.menu
      li
        a(href='/') Main Page
      li
        a(href='products/show') All products
      li(ng-repeat="category in categories")
        a(href='products/show/{{category.name}}') {{category.name}}   
      li(ng-repeat="site in sites", ng-hide="site.isIndex")
        a(href='/{{site.title}}') {{site.title}}     

    div(ng-view) 

    div
      | Angular seed app: v
      span(app-version)

  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/angular-resource.js')
  script(src='js/lib/angular/angular-route.js')
  script(src='js/lib/angular/textAngular.js')
  script(src='js/lib/angular/textAngular-sanitize.js')
  script(src='js/lib/angular/textAngularSetup.js')  
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
